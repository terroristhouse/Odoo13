<odoo>
    <data>
        <!--        资产详细列表菜单-->
        <record model="ir.ui.view" id="bm_zichan_detail_list">
            <field name="name">资产详细列表</field>
            <field name="model">bm.zichan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type_id"/>
                    <field name="state_id"/>
                    <field name="secret_id"/>
                    <field name="cate_id"/>
                    <field name="user_id"/>
                    <field name="section_id"/>
                    <field name="local_id"/>
                    <field name="sequ"/>
                    <field name="number"/>
                    <field name="desc_detail"/>
                    <field name="create_date"/>
                    <field name="write_date"/>
                </tree>
            </field>
        </record>
        <!--        资产详细列表触发器-->
        <record model="ir.actions.act_window" id="zichan_detail_action_window">
            <field name="name">ZiChan_Detail Window</field>
            <field name="res_model">bm.zichan</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="bm_zichan_detail_list"/>
        </record>
        <menuitem name="资产详细列表" id="zichan_detail_menu_1_list" parent="zichan_menu_1" action="zichan_detail_action_window"/>
    </data>
</odoo>