<odoo>
    <data>
        <!--        资产列表菜单-->
        <record model="ir.ui.view" id="bm_zichan_list">
            <field name="name">资产列表</field>
            <field name="model">bm.zichan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type_id"/>
                    <field name="cate_id"/>
                    <field name="secret_id"/>
                    <field name="state_id"/>
                </tree>
            </field>
        </record>
        <!--        资产详情业务文档表单视图-->
        <record model="ir.ui.view" id="bm_zichan_form">
            <field name="name">资产表单</field>
            <field name="model">bm.zichan</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="do_close" type="object" string="回收"/>
                    </header>
                    <sheet>
                        <group name="group_top" col="2">
                            <group name="group_left">
                                <field name="name"/>
                                <field name="number"/>
                                <field name="local_id"/>
                                <field name="user_id"/>
                                <field name="secret_id"/>
                                <field name="type_id"/>
                            </group>
                            <group name="group_right">
                                <field name="sequ"/>
                                <field name="section_id"/>
                                <field name="cate_id"/>
                                <field name="state_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="备注">
                                <field name="desc_detail"/>
                            </page>
                        </notebook>
                        <group name="group_bottom">
                            <field name="use_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--        资产列表触发器-->
        <record model="ir.actions.act_window" id="zichan_action_window">
            <field name="name">ZiChan Window</field>
            <field name="res_model">bm.zichan</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!--        型号型号触发器-->
        <record model="ir.actions.act_window" id="type_action_window">
            <field name="name">Type Window</field>
            <field name="res_model">bm.type</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!--        资产状态触发器-->
        <record model="ir.actions.act_window" id="state_action_window">
            <field name="name">State Window</field>
            <field name="res_model">bm.state</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!--        资产密级触发器-->
        <record model="ir.actions.act_window" id="secret_action_window">
            <field name="name">Secret Window</field>
            <field name="res_model">bm.secret</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!--        资产类别触发器-->
        <record model="ir.actions.act_window" id="cate_action_window">
            <field name="name">Cate Window</field>
            <field name="res_model">bm.cate</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!--        资产使用人触发器-->
        <record model="ir.actions.act_window" id="user_action_window">
            <field name="name">User Window</field>
            <field name="res_model">bm.user</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!--        资产所在部门触发器-->
        <record model="ir.actions.act_window" id="section_action_window">
            <field name="name">Section Window</field>
            <field name="res_model">bm.section</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!--        资产所在地点触发器-->
        <record model="ir.actions.act_window" id="site_action_window">
            <field name="name">Site Window</field>
            <field name="res_model">bm.site</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!--        一级菜单-->
        <menuitem name="资产管理系统" id="zichan_menu_root"/>
        <!--        二级菜单-->
        <menuitem name="资产管理" id="zichan_menu_1" parent="zichan_menu_root"/>
        <menuitem name="资产相关" id="zichan_menu_2" parent="zichan_menu_root"/>
        <menuitem name="资产看板" id="zichan_menu_3" parent="zichan_menu_root"/>
        <!--        三级菜单-->
        <menuitem name="资产列表" id="zichan_menu_1_list" parent="zichan_menu_1" action="zichan_action_window"/>
        <menuitem name="型号" id="zichan_menu_2_list" parent="zichan_menu_2" action="type_action_window"/>
        <menuitem name="状态" id="zichan_menu_2_list_1" parent="zichan_menu_2" action="state_action_window"/>
        <menuitem name="密级" id="zichan_menu_2_list_2" parent="zichan_menu_2" action="secret_action_window"/>
        <menuitem name="类别" id="zichan_menu_2_list_3" parent="zichan_menu_2" action="cate_action_window"/>
        <menuitem name="使用人" id="zichan_menu_2_list_4" parent="zichan_menu_2" action="user_action_window"/>
        <menuitem name="所在部门" id="zichan_menu_2_list_5" parent="zichan_menu_2" action="section_action_window"/>
        <menuitem name="所在地点" id="zichan_menu_2_list_6" parent="zichan_menu_2" action="site_action_window"/>

    </data>
</odoo>